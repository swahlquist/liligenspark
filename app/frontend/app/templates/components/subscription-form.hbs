{{#if trial_choice}}
  <div style='margin-top: 30px;'>
    <button class='btn btn-default btn-lg' {{action 'skip_subscription'}} style='height: 75px; width: calc(50% - 7px); margin-right: 10px;'>{{t "Start with a<br/>2-month trial" key='two_month_trial'}}</button>
    <button class='btn btn-primary btn-lg' {{action 'check_pricing'}} style='height: 75px; width: calc(50% - 7px);'>{{t "See Purchasing<br/>Options" key='see_purchasing'}}</button>
  </div>
{{else}}
  <form {{action "purchase" on="submit"}} class="row" style='max-width: 600px;'>
    <div class="form-group"><div class="col-sm-12">
    {{#unless see_pricing}}
      {{#if trial_option}}
        {{#if subscription.user.really_expired}}
        {{else}}
          <div style='margin-bottom: 10px;'>
            <button class='btn btn-default' {{action 'skip_subscription'}}>{{t "Start with a full-featured 2-month trial, no credit card required" key='two_month_trial'}}</button>
          </div>
        {{/if}}
      {{/if}}
    {{/unless}}
    <table class='subscription_table'>
      <tbody>
        <tr>
          <td colspan="2" style='font-size: 20px; font-weight: bold; color: #fff; background-color: #286090;'>Communicator</td>
          <td colspan="2" style='font-size: 16px; font-weight: bold; color: #fff; background-color: #666;' class='separator'>Therapist/Parent/Supporter</td>
        </tr>
        <tr>
          <td colspan="2" style='vertical-align: top;'>{{t "Works as a general communication app for one user on multiple devices, and can be linked to many free supporters" key='general_communication'}}</td>
          <td colspan="2" style='vertical-align: top; font-size: ' class='separator semi_dim'>{{t "Free account to be used for supporting communicators on devices or on the web. Some features are limited to only work for linked communicators" key='supporting_communicators'}}</td>
        </tr>
        <tr>
          <td style='width: 25%; vertical-align: top; padding-top: 40px; color: #888; position: relative;'>
            {{#if subscription.app_pricing_override}}
              <span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>{{subscription.monthly_app_price}}</span>
              {{subscription.app_currency}}
            {{else if subscription.subscription_discount}}
              <div class='sale'>
                {{t "sale! 50% off" key='save_50_percent'}}
              </div>
              <span style='text-decoration: line-through; display: block; margin-bottom: -10px;'>&nbsp;$6&nbsp;</span>
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>3</span>
            {{else}}
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>6</span>
            {{/if}}
            <div class='middle'>{{t "- or -" key='dash_or_dash'}}</div>
            <div style='margin-top: -5px; line-height: 17px;'>{{t "per month" key='per_month'}}</div>
          </td>
          <td style='width: 25%; vertical-align: top; padding-top: 40px; color: #888; position: relative;'>
            {{#if subscription.app_pricing_override}}
              <span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>{{subscription.long_term_app_price}}</span>
              {{subscription.app_currency}}
            {{else if subscription.much_cheaper_offer}}
              <div class='sale'>
                {{t "sale! 50% off" key='save_50_percent'}}
              </div>
              <span style='text-decoration: line-through; display: block; margin-bottom: -10px;'>&nbsp;$200&nbsp;</span>
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>100</span>
            {{else if subscription.cheaper_offer}}
              <div class='sale'>
                {{t "save 25%" key='save_25_percent'}}
              </div>
              <span style='text-decoration: line-through; display: block; margin-bottom: -10px;'>&nbsp;$200&nbsp;</span>
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>150</span>
            {{else}}
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>200</span>
            {{/if}}
            <div style='margin-top: -5px; line-height: 17px;'>{{t "lifetime purchase" key='one_time_purchase'}}</div>
          </td>
          <td class='separator semi_dim' style='opacity: 1.0; position: relative; width: 25%; vertical-align: top; padding-top: 40px; color: #888;'>
            <span style='font-size: 40px; vertical-align: middle; color: #000;'>free</span>
            {{#unless subscription.app_pricing_override}}
              <div class='middle' style='opacity: 1.0;'>{{t "- or -" key='dash_or_dash'}}</div>
            {{/unless}}
            <div style='margin-top: -5px; line-height: 17px;'>{{t "when supporting communicators" key='when_supporting_communicators'}}</div>
          </td>
          {{#unless subscription.app_pricing_override}}
            <td class='' style='width: 25%; vertical-align: top; padding-top: 40px; color: #888;'>
              $<span style='font-size: 40px; vertical-align: middle; color: #000; padding-left: 3px;'>50</span>
              <div style='margin-top: -5px; line-height: 17px;'>{{t "donate a license<br/> to those in need" key='donate_a_license'}}</div>
            </td>
          {{/unless}}
        </tr>
        <tr>
          <td colspan="2">{{t "run on multiple devices" key='run_on_multiple_devices'}}</td>
          <td colspan="2" class='separator semi_dim'>{{t "run on multiple devices" key='run_on_multiple_devices'}}</td>
        </tr>
        <tr>
          <td colspan="2">{{t "full communication system" key='full_communication_system'}}</td>
          <td colspan="2" class='separator semi_dim'>{{t "use to support and model with paid communicators" key='works_for_communicators'}}</td>
        </tr>
        <tr>
          <td colspan="2">{{t "premium voices included" key='premium_voices'}}</td>
          <td colspan="2" class='separator semi_dim'>{{t "track usage, get alerts and modify<br/>boards for communicators" key='track_for_communicators'}}</td>
        </tr>
        {{#if pricing_only}}
          <tr>
            {{#if subscription.user.subscription.extras_enabled}}
              <td colspan='2'>{{t "premium symbols already added" key='premium_symbols_added'}}</td>
              <td colspan='2' class='separator semi_dim'>{{t "premium symbols already added" key='premium_symbols_added'}}</td>
            {{else if subscription.app_pricing_override}}
              <td colspan='2'>{{t "premium symbols included" key='premium_symbols_included'}}</td>
              <td colspan='2' class='separator semi_dim'>{{t "premium symbols included" key='premium_symbols_included'}}</td>
            {{else}}
              <td colspan='2'>
                <img src="https://d18vdu4p71yql0.cloudfront.net/libraries/pcs/03601/773cfc7cdbfa6770803a334b3089deff6eafca6d003d81bb21b08ae6ea75665c898bccbb25e46eed03592ca2d9b3e471bcd54fc7b4395e06984357e1a0bd976e/03601.svg" style="float: left; width: 60px; margin-left: 20px;" />
                {{t "add PCS (BoardMaker) symbols from Tobii Dynavox for $25" key='add_premium_symbols'}}
              </td>
              <td colspan='2' class='separator semi_dim'>
                <img src="https://d18vdu4p71yql0.cloudfront.net/libraries/pcs/03601/773cfc7cdbfa6770803a334b3089deff6eafca6d003d81bb21b08ae6ea75665c898bccbb25e46eed03592ca2d9b3e471bcd54fc7b4395e06984357e1a0bd976e/03601.svg" style="float: left; width: 60px; margin-left: 20px;" />
                {{t "add PCS (BoardMaker) symbols from Tobii Dynavox for $25" key='add_premium_symbols'}}
              </td>
            {{/if}}
          </tr>
        {{/if}}
        <tr>
          <td>{{t "<a href='http://blog.mycoughdrop.com/what-in-the-world-are-aac-cloud-extras/' target='_blank'>cloud extras</a> included in subscription" key='included_in_subscription'}}</td>
          <td>{{t "<a href='http://blog.mycoughdrop.com/what-in-the-world-are-aac-cloud-extras/' target='_blank'>cloud extras</a><br/>5-year credit<br/>included" key='5_years_included'}}</td>
          <td colspan="2" class='separator semi_dim'>{{t "<a href='http://blog.mycoughdrop.com/what-in-the-world-are-aac-cloud-extras/' target='_blank'>cloud extras</a> work for supported communicators" key='for_supported_communicators'}}</td>
        </tr>
        {{#if pricing_only}}
          <tr>
            <td colspan="2">
              <a href="#" {{action 'bulk_purchase'}}>{{t "interested in a bulk purchase or PO?" key='interested_in_bulk_purchase'}}</a>
            </td>
            <td colspan="2" class='separator semi_dim'>
              {{t "user management tools available for organizations," key='org_tools_available'}}
              {{#link-to 'contact'}}{{t "contact us!" key='contact_us'}}{{/link-to}}
            </td>
          </tr>
        {{else}}
          <tr>
            <td style='width: 25%;'>
              <button style='width: 100%;' rel='monthly' class={{communicator_monthly_subscription_class}} type="button" {{action "set_subscription_type" 'monthly_communicator'}}>
                <b>{{t "select this plan" key='select_this_plan'}}</b><br/>
                {{#if subscription.app_pricing_override}}
                  {{subscription.monthly_app_price}} {{subscription.app_currency}} {{t "per month" key='per_month'}}
                {{else}}
                  {{#if subscription.subscription_discount}}
                    {{t "$3 per month" key='3_per_month'}}
                  {{else}}
                    {{t "$6 per month" key='6_per_month'}}
                  {{/if}}
                {{/if}}
              </button>
            </td>
            <td style='width: 25%;'>
              <button style='width: 100%;' rel='long_term' class={{communicator_long_term_subscription_class}} type="button" {{action "set_subscription_type" 'long_term_communicator'}}>
                <b>{{t "select this plan" key='select_this_plan'}}</b><br/>
                {{#if subscription.app_pricing_override}}
                  {{subscription.long_term_app_price}} {{subscription.app_currency}} {{t "purchase" key='purchase'}}
                {{else}}
                  ${{subscription.long_term_amount}} {{t "purchase" key='purchase'}}
                {{/if}}
              </button>
            </td>
            <td class='separator semi_dim' style='width: 25%;'>
              <button type="button" rel='slp_free' class={{slp_monthly_free_class}} {{action "set_subscription" 'slp_monthly_free'}}>
                <b>{{t "select this plan" key='select_this_plan'}}</b><br/>
                {{t "free supporter" key='free_for_supporters'}}
              </button>
            </td>
            {{#unless subscription.app_pricing_override}}
              <td class='semi_dim' style='width: 25%;'>
                <button type="button" rel='slp_paid' class={{slp_long_term_50_class}} {{action "set_subscription" 'slp_long_term_50'}}>
                  <b>{{t "select this plan" key='select_this_plan'}}</b><br/>
                  {{t "$50 donation" key='50_donation'}}
                </button>
              </td>
            {{/unless}}
          </tr>
          {{#unless subscription.gift_type}}
            <tr>
              {{#if subscription.user.subscription.extras_enabled}}
                <td colspan='2'>{{t "premium symbols already added" key='premium_symbols_added'}}</td>
                <td colspan='2' class='separator semi_dim'>{{t "premium symbols already added" key='premium_symbols_added'}}</td>
              {{else if subscription.app_pricing_override}}
                <td colspan='2'>{{t "premium symbols included" key='premium_symbols_included'}}</td>
                <td colspan='2' class='separator semi_dim'>{{t "premium symbols included" key='premium_symbols_included'}}</td>
              {{else}}
                <td colspan='2'>
                  {{#if subscription.communicator_type}}
                    <label>
                      <img src="https://d18vdu4p71yql0.cloudfront.net/libraries/pcs/03601/773cfc7cdbfa6770803a334b3089deff6eafca6d003d81bb21b08ae6ea75665c898bccbb25e46eed03592ca2d9b3e471bcd54fc7b4395e06984357e1a0bd976e/03601.svg" style="float: left; width: 60px; margin-left: 20px;" />
                      {{input type='checkbox' checked=subscription.extras}}
                      {{t "add PCS (BoardMaker) symbols from Tobii Dynavox for $25" key='add_premium_symbols'}}
                    </label>
                  {{/if}}
                </td>
                <td colspan='2' class='separator semi_dim'>
                  {{#if subscription.supporter_type}}
                    <label>
                      <img src="https://d18vdu4p71yql0.cloudfront.net/libraries/pcs/03601/773cfc7cdbfa6770803a334b3089deff6eafca6d003d81bb21b08ae6ea75665c898bccbb25e46eed03592ca2d9b3e471bcd54fc7b4395e06984357e1a0bd976e/03601.svg" style="float: left; width: 60px; margin-left: 20px;" />
                      {{input type='checkbox' checked=subscription.extras}}
                      {{t "add PCS (BoardMaker) symbols from Tobii Dynavox for $25" key='add_premium_symbols'}}
                    </label>
                  {{/if}}
                </td>
              {{/if}}
            </tr>
          {{else if subscription.free_extras}}
            {{#if subscription.extras}}
              <td colspan='2'>{{t "premium symbols included" key='premium_symbols_included'}}</td>
              <td colspan='2' class='separator semi_dim'></td>
            {{/if}}
          {{/unless}}
          <tr>
            <td colspan="2" style='text-align: right;'>
              {{#if move_gift_option}}
                {{#if trial_option}}
                  <button class='btn btn-default' rel='free_trial' {{action 'skip_subscription'}}>{{t "Start with a 2-month trial" key='two_month_trial'}}</button>
                {{/if}}
              {{else}}
                {{#if subscription.gift_type}}
                  <button class='btn btn-primary btn-sm'>{{t "I have a gift/discount code" key='have_a_gift_code'}}</button>
                  <div style='margin-top: 5px; text-align: center;'>
                    <span style="display: inline-block; width: 100px; margin-left: 5px;">
                      {{input type='text' value=subscription.gift_code class='form-control input-lg' placeholder='CODE'}}
                    </span>
                    <button {{action 'check_gift'}} style='display: inline-block; width: 100px; margin-top: -4px;' class='btn btn-lg btn-default'>
                      {{#if subscription.gift_status.checking}}
                        {{t "..." key='checking'}}
                      {{else if subscription.gift_status.error}}
                        {{t "Invalid" key='invalid'}}
                      {{else}}
                        {{t "Check" key='check'}}
                      {{/if}}
                    </button>
                  </div>
                {{else}}
                  <a href="#" {{action 'set_subscription_type' 'gift_code'}}>
                    {{t "I have a gift/discount code" key='have_a_gift_code'}}
                  </a>
                {{/if}}
              {{/if}}
            </td>
            <td colspan="2" class='separator semi_dim' style='text-align: right;'>
              <a href="#" {{action 'bulk_purchase'}}>
                {{t "Bulk Purchase or PO?" key='bulk_purchase_or_po'}}
              </a>
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
    </div></div>
    {{#if show_bulk_purchase}}
      <div class='form-group'>
        <div class='col-sm-12' style='margin-top: 30px; padding-bottom: 20px;'>
          <p>
            <span class='glyphicon glyphicon-paperclip' style='float: left; font-size: 30px; margin-right: 10px;'></span>
            {{t "We love working with school districts and organizations who want to support multiple communicators! If you're interested in purchasing multiple licenses, or purchasing without using a credit card, please <a href='/contact?to=sales'>contact our sales team for more information</a>." key='bulk_purchase_explainer'}}
          </p>
        </div>
      </div>
    {{/if}}
    {{#if pricing_only}}
      {{#unless show_bulk_purchase}}
        <div class="form-group">
          <div class="col-sm-12" style="margin-top: 20px; padding-bottom: 20px; width: 630px;">
            <div style='text-align: center;'>
              <p style="font-size: 18px; color: #888;">{{t "Or start with a 2-month free trial and make sure it works for you." key='after_free_trial'}}</p>
            </div>
            {{#if show_expiration_notes}}
              <p class="explanation" style="margin-top: 10px;">
                {{t "We don't want to shut off anyone's voice, even if funding unexpectedly becomes an issue down the line. When a user's subscription expires %app_name% will still work as a communication system but premium features like reporting and video notes will be disabled." key='expiration_notes_pre'}}
                {{#if app_state.domain_settings.support_url}}
                  {{t "If you need help with funding please" key='expiration_notes_support'}} 
                  <a href={{app_state.domain_settings.support_url}}>{{t "contact our support team" key='contact_support_team'}}</a> {{t "for more information." key='expiration_notes'}}
                {{/if}}
              </p>
            {{/if}}
          </div>
        </div>
      {{/unless}}
      {{#if app_state.domain_settings.full_domain}}
        <div class="form-group">
          <div class="col-sm-12">
            {{#link-to 'register' class='btn btn-lg btn-primary'}}{{t "Sign Up for a Free Trial of %app_name%" key='sign_up_for_trial_coughdrop'}}{{/link-to}}
            {{#link-to 'gift_purchase' class='btn btn-lg btn-default'}}{{t "Purchase as a Gift" key='purchase_as_a_Gift'}}{{/link-to}}
          </div>
        </div>
      {{/if}}
    {{else}}
      <div class="form-group">
        <div class="col-sm-12" style='margin-top: 20px;'>
          {{#if not_authenticated}}
            {{#unless subscription.confirmation}}
              <p class='text-danger'>{{t "There appears to be an issue with your session that could prevent your purchase from completing. Please try logging out and back in. If that doesn't correct the problem, please try a different browser or contact our support team." key='error_subscription_wont_word'}}</p>
            {{/unless}}
          {{/if}}
          <button type="submit" rel='activate' class="btn btn-lg btn-primary">
            {{#if subscription.discount_percent}}
              <div style='font-weight: bold;'>
                <span class='glyphicon glyphicon-ok-sign'></span>
                {{t "Discount Applied!" key='discount_applied'}}
              </div>
            {{/if}}
            {{#if subscription.user.grace_period}}
              {{t "Activate Account" key='activate_account'}}
            {{else}}
              {{t "Update Account" key='update_account'}}
            {{/if}}
            <div style='font-size: 14px;'>
            {{#if subscription.amount_in_dollars}}
              ({{#if subscription.long_term_subscription}}
                {{t "process" key='process'}}
                ${{subscription.amount_in_dollars}}
              {{else}}
                {{t "paying" key='paying'}}
                ${{subscription.amount_in_dollars}}
                {{t "monthly"}}
                {{#if subscription.extras}}
                  {{t "+ $25 one-time fee" key='plus_one_time_extras'}}
                {{/if}}
              {{/if}})
            {{else if subscription.extras}}
              {{#unless subscription.free_extras}}
                {{t "(process one-time $25 fee)" key='process_one_time_extras'}}
              {{/unless}}
            {{/if}}
            {{#if subscription.user.grace_period}}
              {{#if subscription.monthly_subscription}}
                {{#if subscription.communicator_type}}
                  <br/><em>{{t "monthly fee starts after your free trial" key='billing_after_trial'}}</em>
                {{/if}}
              {{/if}}
            {{/if}}
            </div>
          </button>
          {{#if trial_option}}
            {{#if subscription.user.really_really_expired}}
              &nbsp;&nbsp;<a href="#" class='btn btn-default btn-lg' {{action 'reload'}}>{{t "Reload, I've updated my account" key='reload_subscription_updated'}}</a>
              &nbsp;&nbsp;<a href="#" class='btn btn-default btn-lg' {{action 'logout'}}>{{t "Log Out" key='log_out'}}</a>
            {{else if subscription.user.really_expired}}
              &nbsp;&nbsp;<a href="#" rel='skip_subscription' class='btn btn-default btn-lg' {{action 'skip_subscription'}}>{{t "I need more time" key='i_need_more_time'}}</a>
            {{else}}
              &nbsp;&nbsp;<a href="#" rel='free_trial' class='btn btn-default btn-lg' {{action 'skip_subscription'}}>{{t "Start with a 2-month trial" key='two_month_trial'}}</a>
            {{/if}}
          {{else}}
            <button type="button" rel='cancel' class="btn btn-lg btn-default" {{action "reset"}}>{{t "Cancel Changes" key='cancel_changes'}}</button>
          {{/if}}
        </div>
      </div>
    {{/if}}
  </form>
{{/if}}